@model IEnumerable<BasicNotesApp.Web.ViewModel.NoteViewModel>
@using BasicNotesApp.Domain.Enums



<h2>Notes</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Create Note</a>

<table class="table table-bordered" id="notesTable">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            var rowClass = note.Priority switch
            {
                PriorityLevel.Low => "table-success",
                PriorityLevel.Medium => "table-warning",
                PriorityLevel.High => "table-danger",
                _ => ""
            };
            <tr class="@rowClass" data-id="@note.Id">
                <td>
                    <span class="display-mode">@note.Title</span>
                    <input class="edit-mode form-control" type="text" value="@note.Title" style="display:none;" />
                </td>
                <td>
                    <span class="display-mode">@note.Content</span>
                    <input class="edit-mode form-control" type="text" value="@note.Content" style="display:none;" />
                </td>
                <td>
                    <span class="display-mode">@note.Priority</span>
                    <select class="edit-mode form-control edit-priority" style="display:none;">
                        @Html.Raw(
                                 string.Join("", Enum.GetValues(typeof(PriorityLevel))
                                 .Cast<PriorityLevel>()
                                 .Select(p => $"<option value='{(int)p}' {(p == note.Priority ? "selected" : "")}>{p}</option>")
                                 )
                                 )
                    </select>
                </td>
                <td>
                    <button class="btn btn-sm btn-info display-mode" onclick="editRow(this)">Edit</button>
                    <button class="btn btn-sm btn-success edit-mode" onclick="saveRow(this)" style="display:none;">Save</button>
                    <button class="btn btn-sm btn-secondary edit-mode" onclick="cancelRow(this)" style="display:none;">Cancel</button>

                    <form asp-action="DeleteConfirmed" asp-route-id="@note.Id" method="post" class="form-inline">
                        <button type="submit" class="btn btn-sm btn-danger display-mode"
                                onclick="return confirm('Are you sure you want to delete this note?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function editRow(button) {
            const row = button.closest('tr');
            row.querySelectorAll('.display-mode').forEach(e => e.style.display = 'none');
            row.querySelectorAll('.edit-mode').forEach(e => e.style.display = '');
        }

        function cancelRow(button) {
            const row = button.closest('tr');
            row.querySelectorAll('.display-mode').forEach(e => e.style.display = '');
            row.querySelectorAll('.edit-mode').forEach(e => e.style.display = 'none');
        }

        async function saveRow(button) {
            const row = button.closest('tr');
            const tds = row.querySelectorAll('td');

            const data = new URLSearchParams();
            data.append('Id', row.dataset.id);
            data.append('Title', tds[0].querySelector('input').value);
            data.append('Content', tds[1].querySelector('input').value);
            data.append('Priority', tds[2].querySelector('select').value);

            try {
                const response = await fetch('@Url.Action("EditAjax")', {
                    method: 'POST',
                    body: data,
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
                });

                if (!response.ok) throw new Error('Network response was not ok');

                // Refresh the page to show updated data
                location.reload();
            } catch (error) {
                console.error('Error saving note:', error);
                alert('Error saving note!');
            }
        }
    </script>
}

